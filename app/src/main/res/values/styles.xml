<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionText">
        <item name="android:textColor">@color/primaryDarkColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_24sp</item>
        <item name="android:layout_margin">@dimen/_8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RadioGroup.RadioButton">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
    </style>

</resources>
